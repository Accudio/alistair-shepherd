{% extends 'layouts/base.njk' %}
{% import 'utils/css.njk' as css %}

{# Populate <head> with post-related assets #}
{% block head %}
  {% if config.syntaxTheme %}
    {{ css.defer('/assets/css/syntax-highlight.css') }}
  {% endif %}
{% endblock %}

{% block content %}
  <article>
    <div class="wrap">
      <div class="[ flow ][ measure-long ]">
        {% if date %}
          <time datetime="{{ date | htmlDate }}">{{ date | date }}</time>
        {% endif %}
        <h1>{{ title }}</h1>
        <article class="flow">
          {{ content | safe }}
        </article>
        <hr />
        {% if tags.length %}
          <h5>Tags</h5>
          <nav>
          {% for tag in tags %}
            <a href="/blog/tag/{{tag}}/">{{tag}}</a>
          {% endfor %}
          </nav>
        {% endif %}
      </div>
    </div>
  </article>
{% endblock %}
