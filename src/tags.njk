---
layout: page
metaTitle: Tag
description: Categories page description
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /writing/tag/{{ tag | slug }}/
---
{% from "partials/postItem.njk" import postItem %}

<h1>#{{ tag }}</h1>
<small>{{ collections[tag].length }} posts published</small>

<ol reversed class="[ latest-posts ][ flow flow-space-700 ]">
  {% for item in collections[tag] | reverse %}
    {{ postItem(item.url, item.data.title, item.date, item.data.excerpt) }}
  {% endfor %}
</ol>
